<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find burger_gripper)/config/ros_controllers.yaml" command="load"/>
  
  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" ns="burger_gripper" output="screen" 
              args="--namespace=burger_gripper
              joint_state_controller
              arm_controller
              --timeout 20"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen" />


</launch>